{
    "type": "object",
    "properties": {
        "schema":       { "const": "session.1" },
        "app_version":  { "const": "0.1.0" },
        "tracks": {
            "type": "array",
            "items": {
                "type": "object",
                "schema": { "const": "track.1", "$comment": "see track.1 schema" }
            },
            "required": ["schema"]
        },
        "ports": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "schema": { "enum": ["audioport.1", "midiport.1"],
                                "$comment": "See audioport.1, midiport.1 schemas" }
                },
                "required": ["schema"]
            }
        },
        "scenes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "schema": { "const": "scene.1", "$comment": "see scene.1 schema" }
                }
            }
        },
        "fx_chain_states": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "schema": { "const": "fx_chain.1", "$comment": "see fx_chain.1 schema. Ports not needed here" }
                }
            }
        }
    },
    "required": ["schema", "tracks", "ports", "scenes", "fx_chain_states"]
}