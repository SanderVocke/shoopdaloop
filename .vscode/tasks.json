{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build (Pip editable system install)",
            "type": "shell",
            "command": "PIP_BREAK_SYSTEM_PACKAGES=1 pip install -e ${workspaceFolder} --no-deps -v",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
                }
              }
        },
		{
            "label": "Build (Pip wheel in isolation)",
            "type": "shell",
            "command": "python -m build --wheel ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
                }
              }
        }
    ]
}